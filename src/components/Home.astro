---
import lastFM from '../assets/icons/lastfm.svg';
---

<div class="page active" id="page1">
    <article id="article">
        <div class="profile-container">
            <div class="presence-container">
                <div class="user-container">
                    <div class="avatar-container shape sided-cookie9 extra">
                    <img id="avatar" class="responsive" draggable="false" alt="profile picture" />
                    <div class="status-badge offline" id="status-badge"></div>
                </div>
                <div class="user-info">
                    <div id="username"></div>
                    <div id="user-status">

                    <span class="status-text"></span>
                    <span class="status-indicator offline"></span>
                </div>
                </div>
            </div>

            <div id="presence-data">
            <!-- Activities will appear here -->
            </div>
            </div>
        </div>
        
        <div class="reviews-container">
            <details>
                <summary>
                    <article class="round border no-elevate">
                        <nav>
                            <div class="max">Reviews</div>
                            <i>expand_more</i>
                        </nav>
                    </article>
                </summary>
                <ul id="user-reviews" class="list border">
                    <!-- Reviews will appear here -->
                </ul>
                </details>
        </div>
    </article>

    <article id="about-me">
        <ul class="list no-space">
